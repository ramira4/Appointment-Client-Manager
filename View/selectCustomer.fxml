<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.selectCustomerController">
   <children>
      <Label layoutX="37.0" layoutY="14.0" text="New Appointment ">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="37.0" layoutY="60.0" text="Please select a customer to create new appointment. " />
      <TableView fx:id="customersTable" layoutX="37.0" layoutY="94.0" prefHeight="227.0" prefWidth="528.0">
         <columns>
            <TableColumn fx:id="id" prefWidth="75.0" text="Customer ID" />
            <TableColumn fx:id="name" prefWidth="452.0" text="Customer Name" />
         </columns>
      </TableView>
      <Button fx:id="cancel" onAction="#cancelClick" layoutX="505.0" layoutY="343.0" mnemonicParsing="false" text="Cancel" />
      <Button fx:id="continueButton" onAction="#updateCustomerClick" layoutX="421.0" layoutY="343.0" mnemonicParsing="false" text="Continue" />
   </children>
</AnchorPane>
