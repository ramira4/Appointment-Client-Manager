<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.mainScreenController">
   <children>
      <Label layoutX="9.0" layoutY="14.0" text="Appointment Manager">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="158.0" prefHeight="17.0" prefWidth="148.0" text="Upcoming Appointments:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="upcomingAppt" layoutX="13.0" layoutY="180.0" prefHeight="68.0" prefWidth="464.0" text="There are no upcoming appointments in the next 15 minutes." />
      <ButtonBar layoutX="-35.0" layoutY="72.0" prefHeight="40.0" prefWidth="507.0">
         <buttons>
            <Button fx:id="viewAppts" mnemonicParsing="false" onAction="#viewAppointmentsClick" text="View Appointments" />
            <Button fx:id="viewCustomers" mnemonicParsing="false" onAction="#viewCustomersClick" text="View Customer Records" />
            <Button fx:id="viewRecords" mnemonicParsing="false" onAction="#viewRecordsClick" text="View Reports" />
         </buttons>
      </ButtonBar>
      <Button fx:id="exit" layoutX="406.0" layoutY="255.0" minWidth="73.0" mnemonicParsing="false" onAction="#exitClicked" prefHeight="25.0" text="Exit" />

   </children>
</AnchorPane>
