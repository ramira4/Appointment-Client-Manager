<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.addCustomerController">
   <children>
      <Label layoutX="37.0" layoutY="30.0" text="Add Customer">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <GridPane layoutX="37.0" layoutY="76.0" prefHeight="238.0" prefWidth="416.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="161.0" minWidth="10.0" prefWidth="124.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Name" GridPane.rowIndex="1" />
            <Label text="Phone Number" GridPane.rowIndex="2" />
            <Label text="Address" GridPane.rowIndex="3" />
            <Label text="Country" GridPane.rowIndex="4" />
            <Label text="Division" GridPane.rowIndex="5" />
            <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="phone" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Customer ID" />
            <Label text="Postal Code" GridPane.rowIndex="6" />
            <TextField fx:id="postalCode" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <TextField editable="false" text="Auto-Generated" GridPane.columnIndex="1" />
            <ComboBox fx:id="divisionBox" prefWidth="150.0" promptText="Select" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <ComboBox fx:id="countries" onAction="#onActionProperty" prefWidth="150.0" promptText="Select" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         </children>
      </GridPane>
      <Button fx:id="save" layoutX="332.0" layoutY="331.0" mnemonicParsing="false" onAction="#saveClick" text="Save" />
      <Button fx:id="cancel" layoutX="401.0" layoutY="331.0" mnemonicParsing="false" onAction="#cancelClick" text="Cancel" />
   </children>
</AnchorPane>
